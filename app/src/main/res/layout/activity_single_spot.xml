<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tab_background_pressed"
            android:gravity="center"
            android:text="@string/tab_info_name"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tab_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tab_background_not_pressed"
            android:gravity="center"
            android:text="@string/tab_events_name"
            android:textColor="@color/text_color" />


    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_single_spot_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
